<h1>New Attendance</h1>

<%= form_tag(attendances_url, method: 'post') do %>
  <div>
    <%= label_tag :meeting_id %><br />
    <%= number_field_tag :meeting_id %>
  </div>

  <div>
    <%= label_tag :student_id %><br />
    <%= number_field_tag :student_id %>
  </div>

  <div>
    <%= submit_tag "Create Attendance" %>
  </div>
<% end %>
