<h1>Students</h1>

<p><%= link_to 'Add a New Student', new_student_url %></p>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= link_to 'Show', student_url(student) %></td>
      <td><%= link_to 'Edit', edit_student_url(student) %></td>
      <td><%= link_to 'Destroy', student_url(student), method: 'delete', data: { confirm: "Do you really want to delete this student?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

