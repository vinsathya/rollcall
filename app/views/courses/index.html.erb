<h1>List of Courses</h1>

<p><%= link_to "Add a New Course", new_course_url %></p>

<ul>
	<% @courses.each do |course| %>
		<li><%= course.department %><%= course.number %>: <%= course.title %> </li>
		<%= link_to "Show", course_url(course), :method => "get" %>
		<%= link_to "Edit", edit_course_url(course), :method => "get" %>
		<%= link_to "Destroy", course_url(course), :method => "delete" %>
	<% end %>

</ul>
